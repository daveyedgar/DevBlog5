@model DevBlog5.Models.Blog
@using DevBlog5.Services
@inject IImageService _imageService

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Blog</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <img id="imageFileData" class="img-fluid" width="100" src="@_imageService.DecodeImage(Model.ImageData, Model.ContentType)" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="newImage" asp-for="Image" class="form-control" accept=".jpg,.png,.jpeg,.gif,.svg,.webp"
                       onchage="document.getElementById('imageFileData').src=window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-actions" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><img src="~/assets/images/skip-backward-fill.svg" style="width: 2rem;" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

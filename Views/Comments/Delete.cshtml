@model DevBlog5.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Comment</h1>

<h3>Are you sure you want to delete this comment?</h3>


<div class="card-container">
    <div class="cards">
        <div class="card-item row row-cols-2">

            <div class="comment-image col-2 user-thumbnail">
                @*<img src="@imageService.DecodeImage(comment.BlogUsers.ImageData, comment.BlogUsers.ContentType)" alt="@comment.BlogUsers.FullName" class="">*@
            </div>
            <div class="card-info col-md-6 col-12">
                <h2 class="card-title">Posted By: @Html.DisplayFor(modelItem => Model.BlogUsers.FullName)</h2>
                <p class="card-intro">Post: @Html.DisplayNameFor(model => model.Posts)</p>
                <p class="card-intro">Post Description: @Html.DisplayFor(modelItem => Model.Posts.Abstract)</p>
                <p class="card-intro">Date Created: @Html.DisplayFor(modelItem => Model.Created)</p>
                <p class="card-intro">Date Updated: @Html.DisplayFor(modelItem => Model.Updated)</p>
                <p class="card-intro">Date Deleted:  @Html.DisplayFor(modelItem => Model.Deleted)</p>
                @*<p class="card-intro">Posted by <a href="">@item.BlogUser.FullName</a> on @item.Created</p>*@
            </div>

        </div>
        <div class="row card-text">
            <div class="col">
                <div>
                    @Html.DisplayFor(modelItem => Model.Body)
                </div>
                <div>
                    <h6>Moderated: @Html.DisplayFor(modelItem => Model.Moderated) by @Html.DisplayFor(modelItem => Model.Moderator.Id):  @Html.DisplayFor(modelItem => Model.ModerationType)</h6>
                    <p>@Html.DisplayFor(modelItem => Model.ModeratedBody)</p>
                </div>
            </div>
        </div>
        <div class="row card-link">
        </div>
        @if (User.IsInRole("Administrator"))
        {
            <div class="row card-actions">
                <div class="col">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        }
    </div>
</div>


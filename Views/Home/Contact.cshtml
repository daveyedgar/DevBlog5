@using DevBlog5.ViewModels
@model ContactMe

<div class="footer_top">
    <div class="row">
        <div class="col">
            <div class="section-title">
                <h2>Contact</h2>
                <hr />
            </div>

            <div class="row" data-aos="fade-in">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="info">
                        <div class="address row">
                            <div class="col">
                                <img src="~/assets/images/geo-alt.svg" />
                            </div>
                            <div class="col">
                                <div><h4>Location:</h4></div>
                                <div><h5>Florida, US</h5></div>
                            </div>
                        </div>

                        <div class="email row">
                            <div class="col">
                                <img src="~/assets/images/envelope.svg" />
                            </div>
                            <div class="col">
                                <div>
                                    <h4>Email:</h4>
                                </div>
                                <div>
                                    <p><a class='showEmail' onclick='mail()'>&#9993; Copy Email Address</a></p>
                                </div>
                            </div>
                        </div>

                        <div class="phone row">
                            <div class="col">
                                <img src="~/assets/images/phone.svg" />
                            </div>
                            <div class="col">
                                <div>
                                    <h4>Call:</h4>
                                </div>
                                <div>
                                    <p><a class='showPhone' onclick='phoneNumber()'>&#9993; Show Phone Number</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <form asp-action="Contact" name="contact" id="contactForm" role="form" class="contact-form">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">Your Name</label>
                                <input type="text" class="form-control" placeholder="Name" asp-for="Name" required data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Your Email</label>
                                <input type="email" class="form-control" placeholder="Email Address" asp-for="Email" required data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="phone">Your Phone (optional)</label>
                                <input type="tel" class="form-control" placeholder="Phone Number" asp-for="Phone">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name">Subject</label>
                            <input class="form-control" placeholder="Subject" asp-for="Subject" required data-validation-required-message="Please enter your phone number.">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group">
                            <label>Message</label>
                            <textarea id="summernote" name="editordata" rows="5" class="form-control" asp-for="Message" required data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        @*<input type="hidden" name="_next" value="https://davidbellerose.com#contact">*@
                        <br>
                        <div id="success"></div>
                        <button type="submit" class="btn btn-actions" id="sendMessageButton">Send</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<div>
    <a onclick="javascript:history.back()"><img src="~/assets/images/skip-backward-fill.svg" style="width: 2rem;" /></a>
</div>
@section Scripts{

    <script>
        $('#summernote').summernote({
            placeholder: 'Enter your message...',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>

    <script>
        let message = '@(ViewBag.SwalMessage)';
        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            })
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            })
        }
    </script>
}
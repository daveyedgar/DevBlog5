@page
@model IndexModel
@using DevBlog5.Areas.Identity.Pages.Account
@using DevBlog5.Areas.Identity.Pages.Account.Manage
@using DevBlog5.Services
@inject IImageService _imageService

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row account">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div><br />
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label>Select Image</label>
                <div class="custom-file">
                    <input type="file" asp-for="Input.Image" class="form-control" accept=".jpg,.png,.jpeg,.gif,.webp,.tif,.bmp"
                           onchange="document.getElementById('imageFileData').src=window.URL.createObjectURL(this.files[0])" />
                    
                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                </div>
            </div><br />
            <button id="update-profile-button" type="submit" class="btn btn-actions">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <img src="@Model.CurrentImage" id="imageFileData" class="img-fluid rounded-circle" style="max-width:200px;"  />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@using DevBlog5.Areas.Identity.Pages
@using DevBlog5.Areas.Identity.Pages.Account
@using DevBlog5.Areas.Identity.Pages.Account.Manage
@using DevBlog5.Services

@using DevBlog5.Models
@using Microsoft.AspNetCore.Identity


@inject SignInManager<BlogUser> SignInManager

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav account">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a style="color:blue;" asp-page="./Index">Profile</a></li>
</ul>
<ul class="nav account">
    <li class="@ManageNavPages.EmailNavClass(ViewContext)"><a style="color:blue;" id="email" asp-page="./Email">Email</a></li>
</ul>
<ul class="nav account">
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a style="color:blue;" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a style="color:blue;" id="external-login" asp-page="./ExternalLogins">External logins</a></li>
    }
    @*<li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a style="color:blue;" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>*@
    <li class="@ManageNavPages.PersonalDataNavClass(ViewContext)"><a style="color:blue;" asp-page="./PersonalData">Personal data</a></li>
</ul>
